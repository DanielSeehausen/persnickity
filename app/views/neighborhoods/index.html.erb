<%= render 'shared/carousel' %>

<div class="container-fluid text-center" style="padding-top:30px">
  <div class="row content">
    <h1>All Neighborhoods</h1>
    <div class="col-xs-2 sidenav">
      <h2>Neighborhood Browser</h2>
      <br>
      <div class="btn-group">
        <% if session[:account_id] %>
          <%= link_to 'My Account', account_path(session[:account_id]), class:"button" %>
        <% end %>
        <%= link_to 'Restaurants', restaurants_path, class:"button" %>
      </div>
    </div>
    <div class="col-xs-8 text-left">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th class="col-xs-1" style="text-align:center">No.</th>
            <th class="col-xs-4">Name</th>
            <th class="col-xs-2">Average Score</th>
          </tr>
        </thead>
        <tbody>
          <% @neighborhoods.each do |neighborhood| %>
          <tr>
            <td style="text-align:center"><%= link_to neighborhood.id, neighborhood %></td>
            <td><%= link_to neighborhood.name, neighborhood %></td>
            <td><% if !neighborhood.get_average_score%>
                <%= "No Scores" %>
                <% else %>
                <%= neighborhood.get_average_score.round(2)  %></td>
                <%end%>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-2 sidenav">
    </div>
  </div>
</div>
