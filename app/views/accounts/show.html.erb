<%= render 'shared/jumbo' %>

<div class="container-fluid text-center" style="padding-top:30px">
  <div class="row content">

    <div class="col-sm-2 sidenav">
      <h2>Hey <%= @account.user_name %>!</h2>
      <br>
      <div class="btn-group">
        <%= link_to 'Edit Account', edit_account_path(@account), class:"button" %>
        <%= link_to 'Delete Account', @account, method: :delete, data: { confirm: 'Are you sure?' }, class:"button" %>
        <%= link_to 'Neighborhoods', neighborhoods_path, class:"button" %>
        <%= link_to 'Restaurants', restaurants_path, class:"button" %>
      </div>
    </div>

    <div class="col-sm-8 text-left">
      <p id="notice"><%= notice %></p>
      <h2>Your Hood is <%= @neighborhood.name %></h2>
      <h4>Worst Restaurants based on Most Recent Inspection</h4>
      <%= render 'shared/table' %>
    </div>

    <div class="col-sm-2 sidenav">
    </div>

  </div>
</div>

